(defwindow audio [?volume ?mute]
  :monitor 0
  :windowtype "dialog"
  :wm-ignore true
  :stacking "overlay"

  :geometry (geometry
    :anchor "center center"
    :x "0px"
    :y "0px"
    :width "10%"
    :height "10%"
  )

  (box :class "audio"
    :orientation "h"
    (label
      :text { mute != "" ?  mute == "yes" ? "is mute" : "is not mute"  : "${volume}%" }
    )
  )
)
