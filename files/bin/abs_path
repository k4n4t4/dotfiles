#!/bin/sh
set -eu

[ $# -eq 0 ] && set -- "$(pwd)"

set -- "$(cd "$(dirname -- "$1")" && pwd)" "/" "$(basename -- "$1")"
case "$1" in ( "/" | "//" )
  set -- "$1" "" "$3"
esac
case "$3" in
  ( "/" )  set -- "$1" "$2" "" ;;
  ( "." )  set -- "$1" "" "" ;;
  ( ".." ) set -- "$(dirname -- "$1")" "" "" ;;
esac
printf "%s\n" "$1$2$3"
